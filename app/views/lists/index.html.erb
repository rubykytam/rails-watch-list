
<h1>Lists#index</h1>
<p><%= link_to "Add a new list", new_list_path,  class: "btn btn-warning" %></p>
<div class="container">
<div class = "row">
<% @lists.each do |list| %>
<div class = "card col-md-3">
<%= image_tag(list.photo, class: "card-img-top") %>
<p><%=link_to list.name, list_path(list)%></p>
<%= link_to"Delete it", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
<% end %>
</div>

</div>
