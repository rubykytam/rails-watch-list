<h1>Lists#show</h1>
<p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-warning" %></p>
<div class="container">
<div class = "row">
<% @list.bookmarks.each do |bookmark| %>
<div class="card col-md-3">
<%= image_tag(bookmark.movie.poster_url, class: "card-img-top") %>
  <div class="card-body">
  <h5 class="card-title"><%= bookmark.movie.title %></h5>
  <p lass="card-text"><%= bookmark.movie.overview %></p>
  <%= link_to"Delete it",bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
</div>

<% end %>
</div>
</div>
<p><%= link_to "Back to home", lists_path, class: "btn btn-warning" %></p>
